<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HamburgerMenu.HamburgerMenu">
    <MasterDetailPage.Master>
        <ContentPage
            Title="Menú"
            BackgroundColor="#5e5a5a"
            Padding="0,40,0,0">
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="StartAndExpand">
                <Label Text="My Menu" VerticalOptions="Start" HorizontalOptions="Center" HeightRequest="45"/>
                <StackLayout VerticalOptions="FillAndExpand">
                    <ListView x:Name="ListMenu" HorizontalOptions="StartAndExpand" ItemSelected="ListMenu_ItemSelected" BackgroundColor="White">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell TextColor="Black" Height="25"
                                   Text="{Binding MenuTitle}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
